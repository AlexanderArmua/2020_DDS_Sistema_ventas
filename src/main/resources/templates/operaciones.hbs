<!DOCTYPE html>
<html lang="es" dir="ltr">
<head>
    {{ head "Operaciones" }}
</head>
<body>

{{ navbar null }}

<div class="container-fluid">

    <h1 class="display-3">Operaciones</h1>
    <p class="lead">
        Un listado de todas las operaciones que posee el sistema.
    </p>
    <form method="get" action="{{operacion_view}}">
        <select class="form-control" id="criterios" name="{{query_param_criterios_filtro}}">
            <option value="0">Ninguno</option>
            {{#each criterios}}
            <option name="criterioOption" value="{{id}}">{{descripcion}}</option>
            {{/each}}
        </select>
        <select class="form-control" id="categorias" name="{{query_param_categorias_filtro}}">
            <option value="0">Ninguna</option>
            {{#each categorias}}
            <option name="categoriaOption" value="{{id}}">{{descripcion}}</option>
            {{/each}}
        </select>
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </form>
    <div class="shadow p-1 mb-5 bg-white rounded">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Operaci√≥n</th>
                <th scope="col">Fecha</th>
                <th scope="col">Valor Total</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {{#each operaciones}}
                <tr>
                    <td scope="row">{{id}}</td>
                    <td>
                        {{fecha}}
                    </td>
                    <td>
                        {{valorTotal}}
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Acciones de Usuario">
                            <a href="{{operacion_view}}/{{id}}" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Editar">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg>
                            </a>
                        </div>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 offset-md-10">
                <a href="{{operacion_egreso_crear}}" class="btn btn-success" title="Crear Egreso">Crear Egreso</a>
            </div>
            <div class="col-md-2 offset-md-10">
                <a href="{{operacion_ingreso_crear}}" class="btn btn-success" title="Crear Ingreso">Crear Ingreso</a>
            </div>
        </div>
    </div>
</div>
</body>

{{ generalLibs null }}

<script>
    window.addEventListener("load", function() {
        if({{criterioSeleccionado}} != 0) {
            var options = document.getElementsByName("criterioOption");
            for(var i = 0; i < options.length; i++) {
                if(options[i].value == {{criterioSeleccionado}}){
                    options[i].selected = true;
                    continue;
                }
            }
        }

        if({{categoriaSeleccionada}} != 0) {
            var options = document.getElementsByName("categoriaOption");
            for(var i = 0; i < options.length; i++) {
                if(options[i].value == {{categoriaSeleccionada}}){
                    options[i].selected = true;
                    continue;
                }
            }
        }
    });
</script>

</html>
